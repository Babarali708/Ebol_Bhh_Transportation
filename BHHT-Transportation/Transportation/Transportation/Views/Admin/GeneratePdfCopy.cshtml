@using Transportation.Models
@model GeneratePdfRecordViewModel


@{
    ViewData["Title"] = "GeneratePdfCopy";
    //Layout = "~/Views/Shared/_Layout.cshtml";
    var basicCharges = 0;
    var chargesForExcessValue = 0;
}
<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="shortcut icon" type="image/x-icon" href="~/assets/images/Favicons/C-Fav.jpg">

    <!-- Global stylesheets -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,300,100,500,700,900" rel="stylesheet" type="text/css">
    <link href="~/assets/css/icons/icomoon/styles.css" rel="stylesheet" type="text/css">
    <link href="~/assets/css/bootstrap.css" rel="stylesheet" type="text/css">
    <link href="~/assets/css/core.css" rel="stylesheet" type="text/css">
    <link href="~/assets/css/components.css" rel="stylesheet" type="text/css">
    <link href="~/assets/css/colors.css" rel="stylesheet" type="text/css">

    <link href="~/assets/css/icons/fontawesome/styles.min.css" rel="stylesheet" type="text/css">
    <link href="~/assets/css/icons/fontawesome/fonts/fontawesome-webfont.svg" rel="stylesheet" type="text/css">



</head>

<style>
    /* Apply borders to all sides of table cells */
    .table td {
        border: 1px solid #000;
        padding: 5px;
    }

    .table thead th {
        border: 1px solid #000;
        padding: 5px;
        border-top: 1px solid #000 !important;
        font-weight: bold;
    }
</style>
<style>
    .custom-border {
        border: 3px solid red !important;
    }

    .custom-border-rigth {
        border-right: 3px solid red !important;
        height: 259px !important;
    }
